    .stroke
      fill $Gris[3]
      transitionBase()

    .text
      path
        transitionBase()

    &:hover, &.active
      .stroke
        fill $Azul
        stroke transparent
        stroke-dasharray 0

      .text
        path
          fill #fff


  &-circle
  &-text
