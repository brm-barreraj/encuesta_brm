.item
  &-logo
    background-color $Azul
    border 1px solid #fff
    color #fff
    // cursor pointer
    float left
    position relative
    transitionBase()
    width 100%

    h1,h2,h3,h4,h5,h6
      color #fff


    .container-logo
      cuadrado(8.5rem)
      position absolute
      top 50%
      left 50%
      transform translate3d(-50%, -50%,0)

      img
        object-fit cover
        img-responsive()

    .container-info-cliente
      height 0
      opacity 0
      overflow hidden
      pointer-events none

    .container-social-icon
      pointer-events all !important
      float none !important

    &:hover
      .btn-expand
        svg
  				polygon
  					&:nth-of-type(1)
  						transform translate3d(0%,0%,0)
  					&:nth-of-type(2)
  						transform translate3d(0%,0%,0)

    &-width
      height 0
      max-width 25%
      padding-bottom @max-width

    &.active
      // cursor default
      padding-bottom 50%
      height 0
      left 0 !important
      max-width 100% !important
      // top 0 !important
      width 100% !important
      z-index 5

      .btn-expand
        svg
  				polygon
  					&:nth-of-type(1)
  						transform translate3d(0%,0%,0)
  					&:nth-of-type(2)
  						transform translate3d(0%,0%,0)

      .container-logo
        display inline-block
        left 0
        margin 3rem 2rem 0
        position relative
        top 0
        transform none
        vertical-align top

      .container-info-cliente
        display inline-block
        height 100%
        max-width 86%
        opacity 1
        overflow visible
        vertical-align top
