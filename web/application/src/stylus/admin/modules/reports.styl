.btn
	&-section
		background-color $Gris[2]
		color #fff
		display block
		margin 3rem auto
		padding 1rem 2rem
		text-align center
		text-transform uppercase
		
		&:hover 
			background-color $Amarillo
			color $Gris[2]

.categoria
	&-content
		opacity: 0.99
				
	&-head
		border-bottom 1px dotted $Azul
		position relative
		padding 0.5rem 0
		margin 1rem auto 2rem
		

		
	&-pts
		color $Amarillo
		font-weight $Normal
		margin 0
		padding 0
		position absolute
		right 0
		top 50%
		transform translateY(-50%)
		

	&-resume
		text-align center
		.text-cuenta
			font-weight $Light
		

	&-text
		color $Azul
		font-weight: $Normal
		text-transform uppercase
		
	&-total
		strong
			color $Azul
			font-size 120%


.respuesta
	padding 0.5rem 1.5rem
	
	&-body
		border-bottom 1px dotted $Gris[2]
		position relative
	&-num
		color black
		font-weight $Bold
		left -1.5rem
		margin 0
		position absolute
		top 0
	&-pts
		color $Azul
		font-size 1.8rem
		text-align right

.text
	&-dashboard
		color $Azul
		
	&-intro
		font-weight $Light
		line-height 1.1
		margin-bottom 2rem
		text-align center
		
		strong
			color black
			display block
			font-size 120%
			