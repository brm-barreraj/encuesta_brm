.container-fluid[class^="container-"]:not(.container-banner-home)
  padding-bottom vr-block(2)
  padding-top @padding-bottom

.container
  &-banner-home
    // margin-bottom 8rem
    padding-top vr-block(5)
    position relative

    .row
      position initial


  &-badges
    top 0
    clear both
    make-lg-column-offset(1)
    make-lg-column(10)
    margin-bottom vr-block(1.3)

  &-bienestar
    path('bg-bienestar.jpg')
    background-size cover
    position relative

    .row
      z-index 3

    .u-overlay-black
      z-index 0

  &-casos
    h2
      font-size 3.6rem

  &-casos-resultados
    clear both

  // &-clientes
    // margin-bottom vr-block(1)

  &-columnas
    h3
      box-orient vertical
      -moz-box-orient vertical
      -ms-box-orient vertical
      -o-box-orient vertical
      -webkit-box-orient vertical
      display block
      display -webkit-box
      display -moz-box
      display -ms-box
      display -o-box
      height 7.9rem
      line-clamp 3
      -moz-line-clamp 3
      -ms-line-clamp 3
      -o-line-clamp 3
      -webkit-line-clamp 3
      overlow hidden
      text-overflow ellipsis
      text-transform initial
      white-space normal

    p
      box-orient vertical
      -moz-box-orient vertical
      -ms-box-orient vertical
      -o-box-orient vertical
      -webkit-box-orient vertical
      display block
      display -webkit-box
      display -moz-box
      display -ms-box
      display -o-box
      height 6rem
      line-clamp 3
      -moz-line-clamp 3
      -ms-line-clamp 3
      -o-line-clamp 3
      -webkit-line-clamp 3
      overlow hidden
      text-overflow ellipsis
      white-space normal

    .btn
      color $Gris[1]
      display inline-block

  &-content
    margin-top 44rem

  &-image-hero
    @extend .container-banner-home
    h1
      color #fff
      font-size 4.8rem
      letter-spacing 0.5rem
      margin-left 0
      max-width 70%
      // position relative
      position absolute
      bottom -44rem
      z-index 6
      margin-top vr-block(2)
      text-align left

  &-info-cliente
    padding 3rem 2rem
    transitionBase()

    p
      font-size 2rem
      text-align justify
      text-align-last left

    .nombre-cliente
      display inline-block

  &-info-trabajo
    clear both
    margin 4rem auto
    padding-top 2.3rem

  &-last-ep
    clear both
  &-logos
    clearfix()
    margin 11rem auto 0
    position relative

    .container-btns
      .btn
        &.active
          display none
          & + .btn
            display block

  &-loggin
    h3
      color $Azul

  &-mdm
    path('bg-mdm.jpg')
    background-size cover
    color #fff
    position relative
    padding vr-block(2)
    z-index 0

    .row
      z-index 3

  &-no-img
    margin-top 11rem

  &-registro-loggin
    margin-bottom 3rem

    .barra
      background-color $Gris[0]
      color $Azul
      cursor pointer
      font-size 1.8rem
      max-width 60%
      padding 2rem 1rem
      text-align center

    .registro-externo,
    .loggin-externo
      margin-bottom 3rem
      padding-bottom 0.5rem
      make-xs-column(12)
      make-sm-column(12)
      make-md-column(6)
      make-md-column-offset(3)
      make-lg-column(6)
      make-lg-column-offset(3)
      display none


      // &.active
      //   display block


      form
        padding 0 $Gutter

      h2
        color $Azul
        font-size 1.8rem

      input
        border 1px solid #fff
        border-bottom 1px solid $Gris[1]
        transitionBase()
        width 100%

        &:focus
          border-color $Azul

      label
        color $Amarillo
        font-weight $Normal
        margin-bottom 0
        display block
        margin-top 1rem


      .form-submit
        @extend .btn
        background-color $Azul
        border none
        color #fff
        margin 1rem auto
        text-transform uppercase

        &:hover
          background-color #fff
          color $Azul

    .loggin-externo
      .item-list
        display none

  &-sedes
    clear both

    .sede
      make-xs-column(12)

  &-servicios

    .col-lg-3
      transform-origin top center

    .container-badges
      margin-left 0

      a
        padding 0.5rem
        &::before
          content none

  &-social-icon
    width 15%


  &-text

    .container-intro-text
      p
        font-weight $Bold
        font-size 1.8rem



  &-title
    border-bottom 1px dotted white
    color #fff
    margin-bottom vr-block(0.25)
    margin-top @margin-bottom
    padding-bottom vr-block(0.5)
    // padding-top @padding-bottom
    text-align left
    text-transform initial

  &-vacante
    .vacante
      margin-bottom 1.5rem
      make-xs-column(12)
      make-sm-column(4)
      make-md-column(4)
      make-lg-column(4)
