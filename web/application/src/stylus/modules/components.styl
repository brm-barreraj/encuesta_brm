.container-servicios
  h3.title-servicio
    font-size 1.8rem
    font-weight $Normal
    padding 0.5rem
    height 6rem

  .col-lg-3
    background-color transparent
    border-bottom 10px solid transparent
    cursor pointer
    min-height 42.3rem
    transitionBase()
    // transition border-color 0.3s ease-in-out,
    //            background-color 0.3s ease-in-out,
    //            width 0.3s ease-in-out,
    //            height 0.3s ease-in-out

    &:nth-of-type(2)
      border-bottom-color $Gris[2]
    &:nth-of-type(3)
      border-bottom-color $Amarillo
    &:nth-of-type(4)
      border-bottom-color $Verde
    &:nth-of-type(5)
      border-bottom-color $Cyan


    &:hover
      background-color $Gris[3]
      border-color $Azul


    //estado activo de servicio

    &.active
      background-color #fff
      border-color transparent
      cursor default
      float none
      margin-bottom 44rem
      min-height auto
      position relative
      width 100%
      z-index 1

      &::after
      &::before,
        display table
        content ''

      &::after
        clear both

      &:hover
        // background-color $Gris[3]
        border-color transparent

      &#u-diseno, &#u-69
        &.active
          .servicio-content
            .servicio-list
              .servicio-item
                max-width 30%

      // &#u-dev, &#u-69
      //   background-color rgba($Amarillo,0.1)
      // &#u-sac, &#u-70
      //   background-color rgba($Verde,0.1)
      // &#u-crm, &#u-71
      //   background-color rgba($Cyan,0.1)

      .img-servicio
        display inline-block
        margin-left 8rem
        margin-right 13rem

      .servicio-content
        max-width 60%
        padding-bottom 5rem
        padding-top @padding-bottom
        text-align center
        h3.title-servicio
          height auto
          text-align center

        .servicio-desc
          max-height 100%
          max-width 100%
          opacity 0.99

        .servicio-list
          pointer-events all
          .servicio-item
            border none
            display inline-block
            font-size 1.8rem
            max-width 45%
            text-align center
            vertical-align top
            width 100%

    &.unactive
      bottom 0
      clear both
      float none
      position absolute
      width 33.3%

      &-1
        transform-origin top left
      &-2
        margin-left 33.3%
        transform-origin top center
      &-3
        margin-left (33.3%*2)
        transform-origin top right

  .img-servicio
    img-responsive()
    // display inline-block
    margin 1rem auto
    vertical-align top

  .servicio
    &-caso
      max-height 0rem
      overflow hidden
      padding 1rem
      position relative
      transitionBase()
      z-index 2

      &.active
        max-height 60rem

      h2
        font-size 1.8rem
        font-weight $Normal
        margin-top 2rem
        text-align center

      h3
        font-size 1.6rem
        font-weight $Normal
        margin-bottom 2rem
        text-align center

      .btn-close
        padding 0
        position absolute
        right 1rem
        top 2rem
        &::after
          content none

      .lista-casos
        padding 0
        list-style-type none
        text-align left

        li
          background-color #fff
          border-bottom 1px solid $Gris[3]
          display block
          margin 0.5rem auto

          a
            color #000
            display block
            padding 0.5rem 1rem
            position relative
            z-index 1

            &::before
              background-color $Gris[3]
              content ''
              height 100%
              left 0
              position absolute
              top 0
              transitionBase()
              width 0
              z-index -1

            &:hover
              text-decoration none

              &::before
                width 100%

    &-content
      display inline-block
      vertical-align top
      width 100%
      .servicio-desc
        display inline-block
        max-height 0
        max-width 0
        opacity 0
        overflow hidden
        transitionBase()
        vertical-align top

    &-list
      margin-bottom 1rem
      pointer-events none
      transitionBase()
      .servicio-item
        border-bottom 1px dotted $Gris[1]
        color $Gris[1]
        display block
        transitionBase()

      &.hide
        opacity 0

