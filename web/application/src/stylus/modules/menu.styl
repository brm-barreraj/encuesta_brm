.menu
  ul
    margin 0
    padding 0
    text-align center
    transitionBase(opacity)

    li
      display inline-block
      font-size 1.2rem
      // max-width 13.8rem
      max-width (95%/7)
      position relative
      transitionBase()
      vertical-align middle
      width 100%

      &:hover
        background-color darken($Azul, 20%)

        ul
          display block
          opacity 0.99
          pointer-events all
      a
        color #fff
        display block
        margin 0
        padding 1.7rem 0
        text-align center
        text-transform capitalize
        &:hover
          background-color darken($Azul, 20%)
          text-decoration none

      // &:nth-of-type(2),
      // &:nth-of-type(5),
      // &:nth-of-type(8)
      &:nth-of-type(4)
        a
          padding 0.7rem


      ul
        // display none
        opacity 0
        position absolute
        pointer-events none
        top 100%
        transitionBase(opacity)
        width 100%

        li
          display block
          max-width 100%

          a
            background-color $Azul
            padding 0.7rem 0 !important


      &.active
        a
          background-color darken($Azul, 20%)

  .btn-menu
    background-color transparent
    border none
    cuadrado(4rem)
    display none
    margin 0 auto
    padding 0
    position relative
    transitionBase()

    &::after
      content none

    &:active,&:focus,&:hover
      box-shadow none
      outline 0

    .sr-line
      background-color transparent
      border 1px solid #fff
      display block
      height 1px
      left 0
      position absolute
      top 20%
      transitionBase(,, cubic-bezier(0.32, -0.3, 0.15, 0.88))
      width 100%

      &:nth-of-type(2)
        top 50%

      &:nth-of-type(3)
        top 80%

  &.active
    ul
      pointer-events all
      opacity 0.99

      li
        opacity 1
        transform translate3d(0,0,0)

    .btn-menu
      .sr-line
        top 50%
        &:nth-of-type(1)
          // top 0
          transform rotate(-45deg) scale(0.75)

        &:nth-of-type(2)
          border-radius 100%
          height 100%
          top 0

        &:nth-of-type(3)
          // top 100
          transform rotate(45deg) scale(0.75)
