.chip
	background-color $Gris[3]
	border-radius 5rem
	box-shadow 0px 0px 5px rgba(0, 0, 0, 0.25)
	color black
	display inline-block
	text-align center
	padding 0.5rem 2.6rem
	position relative
	
	a
		cursor pointer
		margin 0
		padding 0
		position absolute
		right 0.7rem
		top 50%
		transform translateY(-@top)
		

.container-login
	.form-group
		border none


//marca
.marca
	border-radius 100%
	box-shadow 0px 0px 5px 0px rgba(0, 0, 0, 0.5)
	height 0
	left 50%
	overflow hidden
	padding-bottom 10rem
	position absolute
	top 23.3rem
	transform translateX(-@left)
	width @padding-bottom
	z-index 2
	
	img
		img-responsive(block)
		max-width 7.5rem
		margin 1rem auto
		