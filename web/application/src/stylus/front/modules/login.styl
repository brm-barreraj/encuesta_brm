//prefijo pub
body.login
	path('bg-login.jpg')
	background-repeat no-repeat
	background-size cover
	color #fff
	text-align center
	

	h1
		color #fff
		

	p
		margin 1rem auto
		font-size 


	.logo
		background-color #fff
		box-shadow 0px 0px 5px 0px rgba(0, 0, 0, 0.5)
		margin 0 auto 3rem
		max-width 10rem
		padding 3.3rem 1rem
		
		svg
			img-responsive(block)
			margin 0 auto
			max-width 20rem
			width 100%
			

.container-login
	margin 1rem auto
	
	.btn
		background-color $Amarillo
		border none
		color #fff
		display block
		margin 0 auto
		max-width 30rem
		padding 1rem 2rem
		text-align center
		width 100%
	
	.form
		&-group
			margin 2rem auto
			position relative
			padding-left 3rem
			transitionBase()
			
			&::before
				background-size cover
				position absolute
				left 0
				top 50%
				transform translateY(-@top)
				content ''
				cuadrado(2.3rem)
			
			input
				background-color transparent
				border none
				border-bottom 1px solid white
				font-size 1.6rem
				padding 1rem 0
				position relative
				transitionBase()
				width 100%
				z-index 0
			
			
			label
				display block
				margin 0
				padding 0
				position absolute
				text-align left
				top 50%
				transform translateY(-@top)
				transitionBase()
				

			&.active
				label
					opacity 0
					pointer-events none
		&-pass
			&::before
				path('icon-pass.svg')
				
		&-user
			&::before
				path('icon-user.svg')
