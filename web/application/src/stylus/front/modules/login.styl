//prefijo pub
body.login
	path('bg-login.jpg')
	background-repeat no-repeat
	background-size cover
	color #fff
	text-align center
	position relative
	height 100vh
	
	

	h1
		color #fff
		font-size 2.8rem
		padding-bottom 0
		


	header
		background-image none
		

	footer
		bottom 0
		position absolute
		width: 100%
		

	p
		display none
		margin 1rem auto
		

	
	

.container-login
	margin 1rem auto
	
	.btn
		background-color $Amarillo
		border none
		color #fff
		display block
		margin 0 auto
		max-width 30rem
		padding 1rem 2rem
		text-align center
		width 100%
	
	.form
		&-group
			margin 2rem auto
			position relative
			padding-left 3rem
			transitionBase()
			
			&::before
				background-size cover
				position absolute
				left 0
				top 50%
				transform translateY(-@top)
				content ''
				cuadrado(2.3rem)
			
			input
				background-color transparent
				border none
				border-bottom 1px solid white
				font-size 1.6rem
				padding 1rem 0
				position relative
				transitionBase()
				width 100%
				z-index 0
				
				&::-webkit-input-placeholder
					color: white
				&::-moz-placeholder
					color: white
					
				&:-ms-input-placeholder
					color: white
				&:-moz-placeholder
					color: white
	
			
			label
				display block
				margin 0
				padding 0
				position absolute
				text-align left
				top 50%
				transform translateY(-@top)
				transitionBase()
				

			&.active
				label
					opacity 0
					pointer-events none
		&-pass
			&::before
				path('icon-pass.svg')
				
		&-user
			&::before
				path('icon-user.svg')
				

.login-active
	height 100% !important
	footer
		position relative !important
